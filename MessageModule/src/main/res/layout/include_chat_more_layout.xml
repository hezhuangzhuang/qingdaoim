<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPhotoAlbum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_chat_photo_album"
            android:gravity="center"
            android:text="相册"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvPhotoGraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_chat_photograph"
            android:gravity="center"
            android:text="拍照"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvVideoCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_chat_video"
            android:gravity="center"
            android:text="视频会议"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvAudioCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_chat_audio"
            android:gravity="center"
            android:text="音频会议"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_chat_file"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="文件"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>