<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_speaceHolder"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:background="#f6f6f6" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_speaceHolder"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_conf_more" />

    <TextView
        android:id="@+id/tv_conf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_speaceHolder"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="技术中心年中总结报告" />

    <TextView
        android:id="@+id/tv_originator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_conf_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:textColor="@color/color_999"
        android:textSize="13sp"
        tools:text="999" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_originator"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:drawableLeft="@mipmap/ic_time"
        android:drawablePadding="6dp"
        android:textColor="@color/color_666"
        android:textSize="13sp"
        tools:text="会议开始时间" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:drawableLeft="@mipmap/ic_history_duration"
        android:drawablePadding="6dp"
        android:textColor="@color/color_666"
        android:textSize="13sp"
        tools:text="会议持续时间" />

    <TextView
        android:id="@+id/tv_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_duration"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:drawableLeft="@mipmap/ic_history_account_number"
        android:drawablePadding="6dp"
        android:textColor="@color/color_666"
        android:textSize="13sp"
        tools:text="会议人数" />

    <TextView
        android:id="@+id/tv_attendee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account_number"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@id/iv_img"
        android:drawableLeft="@mipmap/ic_attendee"
        android:drawablePadding="6dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/color_666"
        android:textSize="13sp"
        tools:drawableRight="@mipmap/ic_conf_array_down"
        tools:text="999" />

</RelativeLayout>